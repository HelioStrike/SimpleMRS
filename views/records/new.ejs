<% include ../partials/header %>

<div class="container text-center">
  <h1>Add new record</h1>

  <div class="row">
    <div style="width: 30%; margin: 25px auto;">
      <form action="/records" method="post" enctype="multipart/form-data">

        <div class="form-group">
          <label>MR Number</label>
          <input class="form-control" type="text" placeholder="MR Number" name="mrno">
        </div>

        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" placeholder="Title" name="title">
        </div>

        <div class="form-group">
          <label>Image</label>
          <input type="file" name="image">
        </div>
        
        <div class=form-group>
          <button class="btn btn-large btn-primary btn-block">Submit</button>
        </div>
      
      </form>
    </div>
    <a href="/patients">Go back</a>
  </div>

</div>

<% include ../partials/footer %>
